{
  "apps": [{
      "name": "main",
      "script": "main.js",
      "watch": false,
      "env": {
        "NODE_ENV": "production"
      },
      "error_file": "err.log",
      "out_file": "out.log",
      "merge_logs": true,
      "log_date_format": "YYYY-MM-DD HH:mm Z",
      "max_memory_restart": "120M"
    }, {
      "name": "userSearch",
      "script": "services/dbSearch/userSearch-service.js",
      "watch": false,
      "error_file": "err.log",
      "out_file": "out.log",
      "merge_logs": true,
      "log_date_format": "YYYY-MM-DD HH:mm Z",
      "max_memory_restart": "120M"
    },

    {

      "name": "logger",
      "script": "services/logger/logger-service.js",
      "watch": false,
      "out_file": "./services/log/info.log",
      "max_memory_restart": "120M"
    }, {

      "name": "translator",
      "error_file": "err.log",
      "out_file": "out.log",
      "merge_logs": true,
      "script": "services/translator/translator-service.js",
      "watch": false,
      "max_memory_restart": "120M"
    }, {

      "name": "client",
      "error_file": "err.log",
      "out_file": "out.log",
      "merge_logs": true,
      "script": "services/client/client-service.js",
      "watch": false,
      "max_memory_restart": "120M",
      "env": {
        "NODE_ENV": "production"
      }
    }
  ]

}